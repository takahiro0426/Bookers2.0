<div class="row">
	<div class="col-3">
		<%= render partial: 'users/user_mene', locals: { user: @user } %>
		<%= render partial: 'books/new', locals: { review: @review } %>
	</div>
	<div class="col-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr><th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<% @books.each do |book| %>
			<tr>
				<th><%= attachment_image_tag book.user,:profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40', class: " pull-left" %></th>
				<th><%= book.title %> </th>
				<th><%= book.body %> </th>
			</tr>
			<% end %>
		</table>
	</div>
</div>

