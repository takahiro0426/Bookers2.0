
<div class="new_book">
  <h2>New book</h2>
  <%= form_for review do |f| %>
  <div class="col-3">
    <div class="form-group">
      <label for="usr"><%= f.label :Title %></label>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="col-3">
    <div class="form-group">
      <label for="usr"><%= f.label :Opinion %></label>
      <%= f.text_area :body %>
    </div>
  </div>
  <%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
  <% end %>
</div>