
<!DOCTYPE html>
<html>
<head>
  <title>Bookers2.0</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/49e942acef.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="nav navbar-dark bg-dark">
    <div class="container">
      <div class="row">
        <nav class="nav navbar-left ">
          <span class="nav navbar-brand p-0 m-0">Bookers</span>
        </nav>
        <ul class="nav ml-auto">
          <% if user_signed_in? %>
          <li nav-item>
            <%= link_to user_path(current_user.id) do %>
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> home
            <% end %>
          </li>
          <li nav-item>
            <%= link_to users_path do%>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
            <% end %>
          </li>
          <li nav-item>
            <%= link_to books_path(current_user.id) do%>
            <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Bookers
            <% end %>
          </li>
          <li nav-item>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> logout
            <% end %>
          </li>
          <% else %>
          <li nav-item>
            <%= link_to root_path do %>
            <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          <li nav-item>
            <%= link_to home_about_path do %>
            <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li nav-item>
            <%= link_to new_user_registration_path do %>
            <i class="fas fa-user-check"></i> sign up
            <% end %>
          </li>
          <li nav-item>
            <%= link_to new_user_session_path do %>
            <i class="fas fa-sign-in-alt"></i> log in
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </header><!-- /header -->
  <div class="container">
    <%= render 'layouts/notifications' %>
    <%= yield %>
    </div>
      <small class="offset-8">Â©CopyRight Infratop.inc</small>
    </div>
  </div>
</body>
</html>
